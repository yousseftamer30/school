@page
@model DrivingSchoolFrontend.Pages.Reservation.CreateModel
@{
    ViewData["Title"] = "Create Reservation";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Create Reservation</h4>
                </div>
                <div class="card-body">
                    <h5>Customer Details</h5>
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>National ID:</strong> @Model.NationalId</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>

                    <hr />

                    <h5>Payment Information</h5>
                    <p><strong>Payment ID:</strong> @Model.PaymentId</p>
                    <p><strong>Amount:</strong> @Model.Amount</p>
                    <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>

                    <hr />

                    <form method="post">
                        <div class="mb-3">
                            <label for="school" class="form-label">Select School</label>
                            <select class="form-select" id="school" asp-for="SelectedSchoolId">
                                @foreach (var school in Model.AvailableSchools)
                                {
                                    <option value="@school.Id">@school.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="courseType" class="form-label">Select Course Type</label>
                            <select class="form-select" id="courseType" asp-for="SelectedCourseType">
                                <option value="Normal">Normal Course</option>
                                <option value="Intensive">Intensive Course</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="day" class="form-label">Select Day</label>
                            <input type="date" class="form-control" id="day" asp-for="SelectedDay">
                        </div>
                        <div class="mb-3">
                            <label for="timeSlot" class="form-label">Select Time Slot</label>
                            <select class="form-select" id="timeSlot" asp-for="SelectedTimeSlot">
                                <!-- TODO: Populate with available time slots -->
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Reservation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
