@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="text" class="form-control" id="phone" name="phone" />
    </div>
    <div class="form-group">
        <label for="nationalId">National ID</label>
        <input type="text" class="form-control" id="nationalId" name="nationalId" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Customer != null)
{
    <h2>Customer Information</h2>
    <p><strong>Full Name:</strong> @Model.Customer.FullName</p>
    <p><strong>Phone:</strong> @Model.Customer.Phone</p>
    <p><strong>National ID:</strong> @Model.Customer.NationalId</p>

    <h3>Payments</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Receipt Serial</th>
                <th>License Name</th>
                <th>Amount</th>
                <th>Payment Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model.Customer.Payments)
            {
                <tr>
                    <td>@payment.ReceiptSerial</td>
                    <td>@payment.LicenseName</td>
                    <td>@payment.Amount</td>
                    <td>@payment.PaymentDate.ToShortDateString()</td>
                    <td>@payment.ReceiptStatus</td>
                    <td>
                        @if (!payment.HasReservation)
                        {
                            <a href="/SelectSchool?licenseId=@payment.LicenseId&paymentId=@payment.PaymentId">Create Reservation</a>
                        }
                        else
                        {
                            <span>Reservation Created</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
